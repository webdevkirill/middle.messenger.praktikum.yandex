<div class='input'>
  <label class='input__label' {{#if id}} for={{id}} {{/if}}>{{label}}</label>
  <input
    class='input__component {{inputClassName}}'
    {{#if id}} id={{id}} {{/if}}
    {{#if type}} type={{type}} {{else}} type="text" {{/if}}
    {{#if placeholder}} placeholder={{placeholder}} {{/if}}
    {{#if name}} name={{name}} {{/if}}
  />
  {{#if error}}
    <div class='input__error'>
      {{error}}
    </div>
  {{/if}}
</div>